<script src="https://cdnjs.cloudflare.com/ajax/libs/three.js/r73/three.js"></script>
<script src="https://cdn.rawgit.com/mrdoob/three.js/master/examples/js/loaders/STLLoader.js"></script>
<script src="https://cdn.rawgit.com/mrdoob/three.js/master/examples/js/controls/TrackballControls.js" type="text/javascript"></script>
<script src="/js/embedapi.js"></script>
<script src="/js/stl_viewer.js" type="text/javascript"></script>

<script>
$(function () {'use strict';
  initViewer();
  animateViewer("<%= template[:stl_key] %>");

  $(".size").click(function(e) {
    $(".size").removeClass("circle_clicked");
    $(this).addClass("circle_clicked");
    var size = $(this).data('size');
    $("#size-selector").val(size);
  });

  $('#next-btn').click(function(e) {
    $('#cookie-size-form').submit();
  });
});
</script>


 <div class="col-md-8">
    <form action="" method="POST" id="cookie-size-form" style="display:none;">
      <div class="form-group">
        <select class="form-control"  id="size-selector" name="size">
          <option value="2">2</option>
          <option value="4">4</option>
          <option value="6">6</option>
          <option value="8">8</option>
          <option value="10">10</option>
          <option value="12">12</option>
        </select>
      </div>
      <input type="submit" class="btn btn-primary btn-block" value= "Next" />
    </form>

    <div class="size-wrapper row">
      <div class="col-md-4">
        <div class="row>">
          <div class="size circle4 col-md-12" data-size="2">
            <div class="circle-text text-custom4">
              2"
            </div>
          </div>
        </div>
        <div class="row>">
          <div class="size circle4 col-md-12" data-size="8">
            <div class="circle-text text-custom4">
              8"
            </div>
          </div>
        </div>
      </div>

      <div class="col-md-4">
        <div class="row>">
          <div class="size circle4 col-md-12" data-size="4">
            <div class="circle-text text-custom4">
              4"
            </div>
          </div>
        </div>
        <div class="row>">
          <div class="size circle4 col-md-12" data-size="10">
            <div class="circle-text text-custom5">
              10"
            </div>
          </div>
        </div>
      </div>

      <div class="col-md-4">
        <div class="row>">
          <div class="size circle4 col-md-12" data-size="6">
            <div class="circle-text text-custom4">
